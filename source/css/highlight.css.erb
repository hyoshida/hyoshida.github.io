<%= Rouge::Themes::Monokai.render(:scope => '.highlight') %>

.highlight {
  margin-bottom: 10.5px;
  background-color: #333;
  border-radius: 4px;
  overflow-x: auto;
}

.highlight pre {
  color: inherit;
  background-color: inherit;
  border: inherit;
  font-size: inherit;
  white-space: pre;
  word-break: normal;
  word-wrap: normal;
}

.highlight pre.lineno {
  color: #75715e;
}

.highlight span.k {
  color: #F92672;
}

.highlight .code pre {
  padding-left: 0;
}

@media (max-width: 1023px) {
  .highlight {
    font-size: 11px;
  }
}
